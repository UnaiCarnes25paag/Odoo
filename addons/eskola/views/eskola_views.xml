<odoo>
    <record id="view_eskola_list" model="ir.ui.view">
        <field name="name">eskola.ikaslea.list</field>
        <field name="model">eskola.ikaslea</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="surname"/>
                <field name="student_age"/>
                <field name="student_gender"/>
            </list>
        </field>
    </record>

    <record id="view_ikaslea_form" model="ir.ui.view">
        <field name="name">eskola.ikaslea.form</field>
        <field name="model">eskola.ikaslea</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <group>
                        <field name="image" widget="image"/>
                    </group>

                    <group>
                        <field name="name"/>
                        <field name="surname"/>
                        <field name="student_age"/>
                        <field name="student_day_of_birth"/>
                        <field name="student_gender"/>
                        <field name="student_blood_group"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
</odoo>
