<odoo>
    <data>
        <!-- Ikasleak -->
        <record id="view_manteo_ikasle_tree" model="ir.ui.view">
            <field name="name">manteo.ikasle.tree</field>
            <field name="model">manteo.ikasle</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="abizenak"/>
                    <field name="ikasmaila"/>
                    <field name="ikasturtea"/>
                    <field name="gela_id"/>
                    <field name="user_id"/>
                </tree>
            </field>
        </record>

        <record id="view_manteo_ikasle_form" model="ir.ui.view">
            <field name="name">manteo.ikasle.form</field>
            <field name="model">manteo.ikasle</field>
            <field name="arch" type="xml">
                <form string="Ikaslea">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="abizenak"/>
                                <field name="ikasmaila"/>
                                <field name="ikasturtea"/>
                                <field name="gela_id"/>
                            </group>
                            <group>
                                <field name="email"/>
                                <field name="telefonoa"/>
                                <field name="user_id"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Asistentziak">
                                <field name="asistentzia_ids">
                                    <tree editable="bottom">
                                        <field name="data"/>
                                        <field name="egoera"/>
                                        <field name="irakasle_id"/>
                                        <field name="oharrak"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Kalifikazioak">
                                <field name="kalifikazio_ids">
                                    <tree editable="bottom">
                                        <field name="modulua"/>
                                        <field name="ebaluazioa"/>
                                        <field name="nota"/>
                                        <field name="irakasle_id"/>
                                        <field name="oharrak"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Esleipenak">
                                <field name="esleipen_ids">
                                    <tree editable="bottom">
                                        <field name="gailu_id"/>
                                        <field name="data_hasiera"/>
                                        <field name="data_amaiera"/>
                                        <field name="egoera"/>
                                        <field name="arduraduna_id"/>
                                        <field name="oharra"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Gorabeherak">
                                <field name="gorabehera_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="gailu_id"/>
                                        <field name="egoera"/>
                                        <field name="lehentasuna"/>
                                        <field name="arduraduna_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

